{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
