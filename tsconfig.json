{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
